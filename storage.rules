rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Users can only access their own files
    match /users/{userId}/{allPaths=**} {
      // Allow read if authenticated and accessing own files
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Allow write if authenticated, accessing own files, and file size is within limits
      allow write: if request.auth != null && 
        request.auth.uid == userId &&
        request.resource.size <= 10 * 1024 * 1024; // 10 MB max file size
      
      // Allow delete if authenticated and accessing own files
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
